{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2018",
      "scripthost",
      "es2015.promise"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "types",
      "node_modules"
    ],
    "types": [
      "@types/node",
      "@types/react",
      "@types/react-dom"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "types/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
